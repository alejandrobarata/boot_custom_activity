{
  "workflowApiVersion": "1.1",
  "metaData": {
    "icon": "images/icon.png",
    "category": "message"
  },
  "type": "Rest",
  "lang": {
    "en-US": {
      "name": "Custom Activity Postal",
      "description": "Custom Activity envio Postal"
    }
  },
  "arguments": {
    "execute": {
      "inArguments": [
        {
          "myInArgument": "inArgument coming from iframe"
        }
      ],
      "outArguments": [],
      "timeout": 100000,
      "retryCount": 1,
      "retryDelay": 10000,
      "concurrentRequests": 5,
      "url": "https://custom-activity-postal.herokuapp.com/activity/execute"
    }
  },
  "configurationArguments": {
    "save": {
      "url": "https://custom-activity-postal.herokuapp.com/activity/save"
    },
    "publish": {
      "url": "https://custom-activity-postal.herokuapp.com/activity/publish"
    },
    "validate": {
      "url": "https://custom-activity-postal.herokuapp.com/activity/validate"
    },
    "stop": {
      "url": "https://custom-activity-postal.herokuapp.com/activity/stop"
    }
  },
  "wizardSteps": [
    {
      "label": "Step 1",
      "key": "step1"
    },
    {
      "label": "Step 2",
      "key": "step2"
    },
    {
      "label": "Step 3",
      "key": "step3"
    },
    {
      "label": "Step 4",
      "key": "step4",
      "active": false
    }
  ],
  "userInterfaces": {
    "configModal": {
      "height": 200,
      "width": 300,
      "fullscreen": true
    }
  },
  "schema": {
    "arguments": {
      "execute": {
        "inArguments": [
          {
            "myInArgument": {
              "dataType": "<some data type>",
              "isNullable": false,
              "direction": "in"
            }
          }
        ],
        "outArguments": []
      }
    }
  }
}
